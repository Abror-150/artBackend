generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id     String  @id @default(uuid())
  name   String
  phone  String
  email  String
  oferta Boolean @default(false)

  art Art[]
}

model Art {
  id        String   @id @default(uuid())
  img       String
  name      String
  price     Int
  about     String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  count     Int
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  Basket    Basket[]
}

model Basket {
  id    String @id @default(uuid())
  artId String
  art   Art    @relation(fields: [artId], references: [id])
  total Int
}

model Contact {
  id String @id @default(uuid())

  name  String
  phone String
  email String?
  mavzu String

  message String
}
